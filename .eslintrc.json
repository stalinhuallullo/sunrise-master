 {
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "next", "standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "no-control-regex": 0,
    "react/react-in-jsx-scope": "off",
    "space-before-function-paren": "off"
  },

  "overrides": [
    {
      "files": ["*.tsx"],
      "rules": {"no-undef": "off"}
    }
  ]
}
